{
  "manifest_version": 3,
  "name": "Ghost Scraper (Company)",
  "version": "1.0",
  "description": "Auto-capture LinkedIn Company pages stealthily",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "*://*.linkedin.com/company/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "stealth-capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Manually capture current company page"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}